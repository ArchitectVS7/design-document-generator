{
  "name": "design-document-generator",
  "private": true,
  "version": "0.7.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "tsc && vite build && npm run analyze",
    "analyze": "npx vite-bundle-analyzer dist/assets/*.js",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "perf:build": "npm run build && npm run perf:report",
    "perf:report": "echo 'ðŸ“Š Bundle Analysis Complete. Check dist/bundle-analysis.html for detailed breakdown.'"
  },
  "dependencies": {
    "eslint": "^8.57.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^16.2.0",
    "postcss": "^8.4.32",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.3.6",
    "terser": "^5.34.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.0",
    "vite-bundle-analyzer": "^0.11.0"
  }
}
