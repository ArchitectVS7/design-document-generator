# Design Document Generator Environment Variables v0.7.0

# Application Configuration
VITE_APP_VERSION=0.7.0
VITE_APP_NAME="Design Document Generator"
VITE_APP_DESCRIPTION="Multi-agent AI system for technical specification generation"

# LLM Provider Configuration
# Currently using mock provider - set to 'mock' for testing
VITE_DEFAULT_LLM_PROVIDER=mock

# OpenAI Configuration (for future use)
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here
VITE_OPENAI_MODEL=gpt-4
VITE_OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Configuration (for future use)
VITE_ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
VITE_ANTHROPIC_MODEL=claude-3-sonnet-20240229
VITE_ANTHROPIC_BASE_URL=https://api.anthropic.com

# Ollama Configuration (for local LLM)
VITE_OLLAMA_BASE_URL=http://localhost:11434
VITE_OLLAMA_MODEL=llama3

# Conversation Settings
VITE_AUTO_PROCEED=false
VITE_ENABLE_REVIEW=true
VITE_MAX_RETRIES=3
VITE_REQUEST_TIMEOUT=30000

# Cost Estimation (per 1K tokens)
VITE_OPENAI_COST_PER_1K_TOKENS=0.03
VITE_ANTHROPIC_COST_PER_1K_TOKENS=0.015
VITE_OLLAMA_COST_PER_1K_TOKENS=0.00

# Feature Flags
VITE_ENABLE_COST_TRACKING=true
VITE_ENABLE_RESPONSE_EDITING=true
VITE_ENABLE_PROMPT_REVIEW=true
VITE_ENABLE_CONVERSATION_HISTORY=true

# Development Settings
VITE_ENABLE_DEBUG_LOGGING=true
VITE_ENABLE_MOCK_DELAYS=true
VITE_MOCK_DELAY_MIN=500
VITE_MOCK_DELAY_MAX=2000

# Security Settings
VITE_ENABLE_API_KEY_VALIDATION=true
VITE_MAX_PROMPT_LENGTH=10000
VITE_MAX_RESPONSE_LENGTH=50000

# UI Settings
VITE_ENABLE_DARK_MODE=false
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_TOOLTIPS=true

# Storage Settings
VITE_ENABLE_LOCAL_STORAGE=true
VITE_MAX_STORED_CONFIGURATIONS=50
VITE_MAX_STORED_CONVERSATIONS=20

# Backend API Configuration
VITE_API_URL=http://localhost:3001

# Removed Supabase-related environment variables. Now using only DATABASE_URL for PostgreSQL. 